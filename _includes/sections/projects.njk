<section id="projects" class="projects">
  <h1 class="section__title">Projects</h1>
  <div class="row--grid">
    {% for each in project %}

      <div class="project">
        <img
          class="project__img"
          src="{{ each.logo }}"
          alt="project"
/>
        <div class="project__wrapper">
          <h1 class="project__title">
            {{ each.title }}
          </h1>
          <div class="project__description">
            {{ each.description }}
          </div>
          <div class="project__icons">
            <a href="{{ each.repo }}">
              <i class="bi bi-github project__icon"></i>
            </a>
            <a href="{{ each.url }}">
              <i class="bi bi-globe project__icon"></i>
            </a>
          </div>
        </div>
      </div>

    {% endfor %}
  </div>
</section>